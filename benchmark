#!/bin/bash

[ $1 ] || {
	echo "usage: ${0##*/} CSS..."
	exit 1
}

echo "processing `cat $@ | wc -c` bytes"
echo

TIMEFORMAT='%R  %U  %S'
DATA=

printf "%-10sreal   user   system\n"

for F in csspack.*
do
	[ -x $F ] || continue

	printf '%-10s' ${F#*.}

	echo 'test' | ./$F &> /dev/null || {
		echo '(not installed)'
		continue
	}

	time D=`cat $@ | ./$F 2> /dev/null`

	[ "$DATA" ] || DATA=$D

	if [[ $DATA != $D ]]
	then
		echo 'ERROR: DOES NOT MATCH!'
	fi
done

echo
